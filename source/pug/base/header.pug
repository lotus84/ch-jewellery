mixin header(headerMods, currentPage)
  -
    var headerLinks = [
      {
        href: "#",
        text: "Страница 1"
      },
      {
        href: "#",
        text: "Страница 2"
      },
      {
        href: "#",
        text: "Страница 3"
      },
    ]

  header.header(class=headerMods)
    .header__wrapper
      if(currentPage === "main")
        a.header__logo Логотип
      else
        a.header__logo(href="main.html", aria-label="Переход на главную") Логотип
      nav.main-nav
        button.main-nav__toggle.btn-reset(type="button", aria-label="Переключатель отображения меню", aria-pressed="false")
          +icon("icon-burger", 20, 20)
        .main-nav__wrapper
          ul.main-nav__list
            each link, index in headerLinks
              li.main-nav__item
                if(index === currentPage)
                  a.main-nav__link.main-nav__link--active=link.text
                else
                  a.main-nav__link(href=link.href)=link.text
